
Para que watchtower

services:
  watchtower:
    image: containrrr/watchtower
    container_name: watchtower
    command: --cleanup --interval 10 --label-enable
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock
    networks:
      - watchtower
    labels:
      - "com.centurylinklabs.watchtower.enable=true"

networks:
  watchtower:
    external: true
